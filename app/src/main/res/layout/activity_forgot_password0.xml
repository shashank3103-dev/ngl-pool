<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_bg__sign_in_ek1_shape"
    tools:context=".forgot_password_0">


    <RelativeLayout android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" >
        <RelativeLayout android:id="@+id/page_forget_password_mail_ek1"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >




            <RelativeLayout android:id="@+id/group_47694"
                android:layout_marginTop="286dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >



                <RelativeLayout android:id="@+id/button"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <Button
                        android:id="@+id/resetPassword_1"
                        android:background="@drawable/_bg__button_ek1_shape"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:layout_width="327dp"
                        android:text="Reset Password"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_height="56dp" />


                </RelativeLayout>


                <RelativeLayout android:id="@+id/group_47693"
                    android:layout_marginTop="86dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >


                    <TextView
                        android:id="@+id/remember_your_password__login"
                        android:layout_gravity="center_horizontal|center"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/remember_your_password__login_color"
                        android:layout_marginLeft="-2dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="333.4dp"
                        android:layout_height="25.4dp"
                        android:text="@string/remember_your_password__login_string"
                        />

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout android:id="@+id/password"
                android:layout_marginTop="156dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >



                <TextView android:id="@+id/email_address"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="124.6dp"
                    android:layout_height="28.6dp"
                    android:text="Email Address"
                    />


                <RelativeLayout android:id="@+id/input_field"
                    android:layout_marginTop="36dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <EditText  android:id="@+id/_bg___input_field_ek1"
                        android:background="@drawable/_bg___input_field_ek1_shape"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="327dp"
                        android:textSize="14dp"
                        android:textColor="@color/enter_email_address_color"
                        android:textColorHint="@color/enter_email_address_color"
                        android:paddingStart="8dp"

                        android:hint="shashankshakya2015@gmail.com"
                        android:layout_height="52dp" >
                    </EditText>



                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout android:id="@+id/group_47577"
                android:layout_marginTop="64dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >



                <TextView android:id="@+id/forgot_your_password_"
                    android:layout_gravity="center_horizontal|center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="244dp"
                    android:layout_height="31dp"
                    android:text="Forgot Your Password"
                    />


                <RelativeLayout android:id="@+id/group_38"
                    android:layout_marginTop="42dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >



                    <TextView android:id="@+id/enter_your_email_address_to_recover"
                        android:layout_gravity="center_horizontal|center"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="-2dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="230.2dp"
                        android:layout_height="23.2dp"
                        android:text="Enter your email address to recover"
                        />

                </RelativeLayout>

            </RelativeLayout>







        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
